@model ListaDeTarefas.Models.PaginatedList<ListaDeTarefas.Models.CategoriaModel>

@{
    ViewData["Title"] = "Categorias";
    var currentFilter = ViewData["CurrentFilter"] as string ?? "";
    var currentSort = ViewData["CurrentSort"] as string ?? "";
}

<h1>Categorias</h1>

<!-- Filtros -->
<div class="mb-3">
    <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="collapse" data-bs-target="#filtrosAccordion" aria-expanded="false" aria-controls="filtrosAccordion">
        <i class="bi bi-funnel me-2"></i>Filtros
    </button>
    <a asp-action="Create" class="btn btn-sm btn-primary ms-2">
        <i class="bi bi-plus-square"></i>
        Adicionar
    </a>
</div>

<div class="collapse mb-3" id="filtrosAccordion">
    <div class="card card-body">
        <form asp-controller="CategoriaModels" asp-action="Index" method="get" class="row g-3">
            <div class="col-md-8">
                <label class="form-label small fw-bold">Buscar</label>
                <input type="text"
                       name="searchString"
                       class="form-control"
                       placeholder="Nome ou descrição..."
                       value="@currentFilter" />
            </div>

            <div class="col-md-4">
                <label class="form-label small fw-bold">Ordenar por</label>
                <select name="sortOrder" class="form-control">
                    <option value="">Nome (A-Z)</option>
                    <option value="name_desc" selected="@(currentSort == "name_desc")">Nome (Z-A)</option>
                    <option value="desc" selected="@(currentSort == "desc")">Descrição (A-Z)</option>
                    <option value="desc_desc" selected="@(currentSort == "desc_desc")">Descrição (Z-A)</option>
                </select>
            </div>

            <div class="col-12 d-flex gap-2 justify-content-end mt-3">
                <button type="submit" class="btn btn-sm btn-primary">
                    <i class="bi bi-search me-1"></i> Aplicar Filtros
                </button>
                <a asp-controller="CategoriaModels" asp-action="Index" class="btn btn-sm btn-secondary">
                    <i class="bi bi-x-circle me-1"></i> Limpar
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Indicador de filtros ativos -->
@if (!string.IsNullOrEmpty(currentFilter) || !string.IsNullOrEmpty(currentSort))
{
    <div class="alert alert-info d-flex align-items-center mb-3" role="alert">
        <i class="bi bi-info-circle me-2"></i>
        <div>
            <strong>Filtros ativos:</strong>
            @{
                var filtrosAtivos = new List<string>();
                if (!string.IsNullOrEmpty(currentFilter)) filtrosAtivos.Add($"Busca: \"{currentFilter}\"");
                if (!string.IsNullOrEmpty(currentSort))
                {
                    var ordenacao = currentSort switch
                    {
                        "name_desc" => "Nome (Z-A)",
                        "desc" => "Descrição (A-Z)",
                        "desc_desc" => "Descrição (Z-A)",
                        _ => "Nome (A-Z)"
                    };
                    filtrosAtivos.Add($"Ordenação: {ordenacao}");
                }
            }
            @string.Join(" | ", filtrosAtivos)
        </div>
    </div>
}

<!-- Tabela -->
<table class="table table-striped table-bordered rounded">
    <thead>
        <tr>
            <th class="col-4">
                @Html.DisplayNameFor(model => model[0].Nome)
            </th>
            <th class="col-6">
                @Html.DisplayNameFor(model => model[0].Descricao)
            </th>
            <th class="col-1">Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
                    <td class="d-flex justify-content-center align-items-center gap-2">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                            <i class="bi bi-info-square"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center py-5">
                    <div class="d-flex flex-column align-items-center">
                        <i class="bi bi-folder-x display-1 text-muted mb-3"></i>
                        <h4 class="text-muted">Nenhuma categoria encontrada</h4>
                        <p class="text-muted mb-3">
                            @if (!string.IsNullOrEmpty(currentFilter))
                            {
                                <text>Nenhum resultado para os filtros aplicados.</text>
                            }
                            else
                            {
                                <text>Nenhuma categoria cadastrada no momento.</text>
                            }
                        </p>
                        @if (!string.IsNullOrEmpty(currentFilter))
                        {
                            <a asp-controller="CategoriaModels" asp-action="Index" class="btn btn-primary">
                                <i class="bi bi-arrow-clockwise me-2"></i>Resetar Filtros
                            </a>
                        }
                        else
                        {
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i>Criar Primeira Categoria
                            </a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Paginação -->
<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            <a class="page-link"
               asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex - 1)"
               asp-route-searchString="@currentFilter"
               asp-route-sortOrder="@currentSort">
                Anterior
            </a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@i"
                   asp-route-searchString="@currentFilter"
                   asp-route-sortOrder="@currentSort">
                    @i
                </a>
            </li>
        }

        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
            <a class="page-link"
               asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex + 1)"
               asp-route-searchString="@currentFilter"
               asp-route-sortOrder="@currentSort">
                Próxima
            </a>
        </li>
    </ul>
</nav>