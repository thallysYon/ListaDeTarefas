@model ListaDeTarefas.Models.CategoriaModel

@{
    ViewData["Title"] = "Excluir Categoria";
}

<div class="card text-center">
    <div class="card-header bg-primary-subtle">
        <h5 class="card-title mb-0">
            <i class="bi bi-exclamation-triangle me-2"></i>Excluir Categoria
        </h5>
    </div>
    <div class="card-body">
        <div class="alert alert-danger text-start">
            <h6 class="alert-heading">
                <i class="bi bi-exclamation-circle me-2"></i>Atenção!
            </h6>
            <p class="mb-0">Esta ação não pode ser desfeita. Tem certeza que deseja excluir esta categoria?</p>
        </div>

        <div class="card border-0">
            <div class="card-body text-start">
                <h6 class="card-title fw-bold mb-3">Detalhes da Categoria</h6>

                <div class="mb-3">
                    <label class="fw-bold text-muted">Nome</label>
                    <p class="mb-0 fs-6">@Html.DisplayFor(model => model.Nome)</p>
                </div>

                <div class="mt-3">
                    <label class="fw-bold text-muted">Descrição</label>
                    <p class="mb-0 border rounded p-3 bg-light">@Html.DisplayFor(model => model.Descricao)</p>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer bg-transparent">
        <form asp-action="Delete" id="deleteForm">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-2 justify-content-center">
                <button type="submit" form="deleteForm" class="btn btn-danger col-6">
                    <i class="bi bi-trash me-2"></i>Excluir
                </button>
                <a asp-action="Index" class="btn btn-secondary col-6">
                    <i class="bi bi-arrow-left me-2"></i>Cancelar
                </a>
            </div>
        </form>
    </div>
</div>