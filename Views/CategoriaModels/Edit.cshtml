@model ListaDeTarefas.Models.CategoriaModel

@{
    ViewData["Title"] = "Editar Categoria";
}

<div class="card text-center">
    <div class="card-header bg-primary-subtle">
        <h5 class="card-title mb-0">
            <i class="bi bi-pencil-square me-2"></i>Editar Categoria
        </h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit" id="editForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="form-group mb-3 text-start">
                        <label asp-for="Nome" class="form-label fw-bold">Nome da Categoria</label>
                        <input asp-for="Nome" class="form-control" placeholder="Digite o nome da categoria" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3 text-start">
                        <label asp-for="Descricao" class="form-label fw-bold">Descrição</label>
                        <textarea asp-for="Descricao" class="form-control" placeholder="Digite a descrição da categoria" rows="3"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="card-footer bg-transparent">
        <div class="d-flex gap-2 justify-content-center">
            <button type="submit" form="editForm" class="btn btn-primary col-6">
                <i class="bi bi-check-circle me-2"></i>Salvar Alterações
            </button>
            <a asp-action="Index" class="btn btn-secondary col-6">
                <i class="bi bi-arrow-left me-2"></i>Cancelar
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}