@model ListaDeTarefas.Models.CategoriaModel

@{
    ViewData["Title"] = "Detalhes da Categoria";
}

<div class="card text-center">
    <div class="card-header bg-info-subtle">
        <h5 class="card-title mb-0">
            <i class="bi bi-info-circle me-2"></i>Detalhes da Categoria
        </h5>
    </div>
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <dl class="row text-start">

                    <dt class="col-sm-4 fw-bold">
                        <i class="bi bi-tag me-2"></i>@Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>

                    <dt class="col-sm-4 fw-bold mt-2">
                        <i class="bi bi-card-text me-2"></i>@Html.DisplayNameFor(model => model.Descricao)
                    </dt>
                    <dd class="col-sm-8 mt-2">
                        @Html.DisplayFor(model => model.Descricao)
                    </dd>

                </dl>
            </div>
        </div>
    </div>
    <div class="card-footer bg-transparent">
        <div class="d-flex gap-2 justify-content-center">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary col-6">
                <i class="bi bi-pencil me-2"></i>Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary col-6">
                <i class="bi bi-arrow-left me-2"></i>Voltar para a Lista
            </a>
        </div>
    </div>
</div>