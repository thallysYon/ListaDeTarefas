@model ListaDeTarefas.Models.TarefaModel

@{
    ViewData["Title"] = "Nova Tarefa";
}

<div class="card text-center">
    <div class="card-header bg-primary-subtle">
        <h5 class="card-title mb-0">
            <i class="bi bi-plus-circle me-2"></i>Nova Tarefa
        </h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" id="tarefaForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3 text-start">
                        <label asp-for="Titulo" class="form-label fw-bold">Título</label>
                        <input asp-for="Titulo" class="form-control" placeholder="Digite o título da tarefa" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3 text-start">
                        <label asp-for="CategoriaId" class="form-label fw-bold">Categoria</label>
                        <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId">
                            <option value="">Selecione uma categoria</option>
                        </select>
                        <span asp-validation-for="CategoriaId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3 text-start">
                <label asp-for="Descricao" class="form-label fw-bold">Descrição</label>
                <textarea asp-for="Descricao" class="form-control" placeholder="Descreva a tarefa..." rows="3"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group mb-3 text-start">
                        <label asp-for="DataLimite" class="form-label fw-bold">Data Limite</label>
                        <input asp-for="DataLimite" type="date" class="form-control" />
                        <span asp-validation-for="DataLimite" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3 text-start">
                        <label asp-for="Prioridade" class="form-label fw-bold">Prioridade</label>
                        <select asp-for="Prioridade" class="form-control" asp-items="Html.GetEnumSelectList<ListaDeTarefas.Enums.PrioridadeEnum>()">
                            <option value="">Selecione a prioridade</option>
                        </select>
                        <span asp-validation-for="Prioridade" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group mb-3 text-start">
                        <label asp-for="Situacao" class="form-label fw-bold">Situação</label>
                        <select asp-for="Situacao" class="form-control" asp-items="Html.GetEnumSelectList<ListaDeTarefas.Enums.SituacaoEnum>()">
                            <option value="">Selecione a situação</option>
                        </select>
                        <span asp-validation-for="Situacao" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="card-footer bg-transparent">
        <div class="d-flex gap-2 justify-content-center">
            <button type="submit" form="tarefaForm" class="btn btn-primary col-6">
                <i class="bi bi-check-circle me-2"></i>Criar Tarefa
            </button>
            <a asp-action="Index" class="btn btn-secondary col-6">
                <i class="bi bi-arrow-left me-2"></i>Voltar
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}