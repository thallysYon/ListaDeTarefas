@using ListaDeTarefas.Enums
@model ListaDeTarefas.Models.PaginatedList<ListaDeTarefas.Models.TarefaModel>

@{
    ViewData["Title"] = "Index";
    var currentFilter = ViewData["CurrentFilter"] as string ?? "";
    var currentStatus = ViewData["CurrentStatus"] as string ?? "";
    var statusOptions = ViewBag.StatusOptions as IEnumerable<string> ?? new string[] { };
}

<h1>Lista de tarefas</h1>


    
        <form asp-controller="TarefaModels" asp-action="Index" method="get" class="row g-3 mb-3">
            <div class="col-md-5">
                <input type="text"
                       name="searchString"
                       class="form-control"
                       placeholder="Buscar por título..."
                       value="@currentFilter" />
            </div>

            <div class="col-md-4">
                <select name="statusFilter" class="form-control">
                    <option value="">Todos</option>
                    @foreach (var status in statusOptions)
                    {
                        if (string.Equals(status, currentStatus, StringComparison.OrdinalIgnoreCase))
                        {
                            <option value="@status" selected>@status</option>
                        }
                        else
                        {
                            <option value="@status">@status</option>
                        }
                    }
                </select>
            </div>

            <div class="col-md-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search me-1 text-light"></i> Filtrar
                </button>
                <a asp-controller="TarefaModels" asp-action="Index" class="btn btn-secondary w-100">Limpar</a>
            </div>
        </form>
    


<p>
    <a asp-action="Create" class="btn btn-sm btn-primary">
        <i class="bi bi-plus-square"></i>
    Adicionar</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DataDeCriacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].DataLimite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Prioridade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Situacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
            <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
            <td>@Html.DisplayFor(modelItem => item.DataDeCriacao)</td>
            <td>@Html.DisplayFor(modelItem => item.DataLimite)</td>
            <td class="text-center">
                <span class="badge
                      @(item.Prioridade == (PrioridadeEnum)0 ? "bg-success" :
                      item.Prioridade == (PrioridadeEnum)1 ? "bg-warning" :
                      item.Prioridade == (PrioridadeEnum)2 ? "bg-danger" : "bg-primary")">
                    @item.Prioridade
                </span>
            </td>
            <td>@Html.DisplayFor(modelItem => item.Situacao)</td>
            <td>
                @(item.Categoria != null ? item.Categoria.Nome : "")
            </td>
                <td class="d-flex justify-content-center align-items-center gap-2">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">
                        <i class="bi bi-info-square"></i>
                    </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">
                        <i class="bi bi-trash"></i>
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-searchString="@currentFilter" asp-route-statusFilter="@currentStatus">Anterior</a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-searchString="@currentFilter" asp-route-statusFilter="@currentStatus">@i</a>
            </li>
        }

        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
            <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-searchString="@currentFilter" asp-route-statusFilter="@currentStatus">Próxima</a>
        </li>
    </ul>
</nav>
